<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SurfTestApp" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="Theme.SurfTestApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Main" />

    <style name="Main.Title">
        <item name="android:textColor">@color/general_text_color</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/didact_gothic</item>
    </style>

    <style name="Main.AddInfoText">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/didact_gothic</item>
    </style>

    <style name="Main.ItemTitle">
        <item name="android:textColor">@color/item_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/didact_gothic</item>
    </style>

    <style name="Details" />

    <style name="Details.Title">
        <item name="android:textColor">@color/general_text_color</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/didact_gothic</item>
    </style>

    <style name="Details.Info">
        <item name="android:textColor">@color/general_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/didact_gothic</item>
    </style>

    <style name="BlueButton">
        <item name="android:textColor">@color/item_text_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/didact_gothic</item>
    </style>

    <style name="Edit" />

    <style name="Edit.Input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/didact_gothic</item>
        <item name="android:textSize">18sp</item>
        <item name="boxStrokeColor">#00FFFF</item>
    </style>

    <style name="InputShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>>
    </style>

</resources>